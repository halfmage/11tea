{
  "name": "11tea",
  "version": "1.0.0",
  "description": "A Eleventy TailwindCSS AplineJS Starter",
  "scripts": {
    "start": "eleventy --serve & postcss src/styles/tailwind.css --o _tmp/style.css --watch",
    "build": "ELEVENTY_PRODUCTION=true eleventy && NODE_ENV=production postcss src/styles/tailwind.css --o _site/style.css && cleancss _site/style.css -o _site/style.css",
    "clean": "rm -rf _site _tmp"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/halfmage/11tea.git"
  },
  "author": {
    "name": "Gerrit Halfmann",
    "email": "gerrit@gerrithalfmann.com",
    "url": "https://gerrithalfmann.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halfmage/11tea/issues"
  },
  "homepage": "https://github.com/halfmage/11tea#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^0.8.0",
    "alpinejs": "^2.8.2",
    "autoprefixer": "^10.2.5",
    "html-minifier": "^4.0.0",
    "postcss": "^8.1.9",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^8.3.1",
    "sharp": "^0.28.3",
    "tailwindcss": "^2.1.2"
  }
}
